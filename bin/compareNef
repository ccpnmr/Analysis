#!/usr/bin/env bash

export CCPNMR_TOP_DIR="$(dirname $(cd $(dirname "$0"); pwd))"
export COMPARENEFIO=${CCPNMR_TOP_DIR}/src/python/ccpn/util/nef/CompareNef.py

export ANACONDA3=${CCPNMR_TOP_DIR}/miniconda
export PYTHONPATH=${CCPNMR_TOP_DIR}/src/python:${CCPNMR_TOP_DIR}/src/c
export FONTCONFIG_FILE=${ANACONDA3}/etc/fonts/fonts.conf
export FONTCONFIG_PATH=${ANACONDA3}/etc/fonts
export QT_PLUGIN_PATH=${QT_PLUGIN_PATH}:${ANACONDA3}/plugins

[[ $(xattr "$COMPARENEFIO") = *$attr* ]] && xattr -d $attr "$COMPARENEFIO" #removes quarantine checks
${ANACONDA3}/bin/python -W ignore::DeprecationWarning ${COMPARENEFIO} $*